class Solution {
    public int integerBreak(int InputNumber) {
if (InputNumber%3==0&& InputNumber!=3) {
		int k=InputNumber/3 ;
		return (int)Math.pow(3, k);
	}
    if (InputNumber==2){
        return 1;
    }
    if (InputNumber==3){
        return 2;
    }
	else if(InputNumber%3==1) {
		int k=InputNumber/3-1;
		return (int)Math.pow(3,k)*4;
	}
	else {
		int k=InputNumber/3;
		return (int)Math.pow(3,k)*2;
	}
    }
}
